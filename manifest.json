{
  "manifest_version": 2,
  "name": "TB Copilot (starter)",
  "version": "0.1.0",
  "description": "Collapsible Copilot sidebar for Thunderbird â€” read current message, search, create drafts and generate calendar .ics",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "messagesRead",
    "messagesModify",
    "compose",
    "compose.save",
    "storage",
    "addressBooks",
    "accountsRead",
    "accountsFolders",
    "notifications",
    "tabs",
    "activeTab",
    "https://api.openai.com/*"
  ],
  "browser_action": {
    "default_title": "Copilot",
    "default_icon": "icons/icon-48.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "compose_action": {
    "default_title": "Edit with Copilot",
    "default_icon": "icons/icon-48.png",
    "default_popup": "compose-action-popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "copilot-starter@example.com",
      "strict_min_version": "128.0"
    }
  }
}